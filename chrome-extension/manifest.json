{
    "manifest_version": 3,
    "name": "Barcode & QR Code Generator",
    "version": "1.0.1",
    "description": "Generate 1D/2D barcodes from current page URL or custom text",
    "permissions": [
        "activeTab"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}